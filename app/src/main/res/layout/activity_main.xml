<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:src="@drawable/b1"
            android:background="#00000000"
            android:id="@+id/button1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:src="@drawable/b2"
            android:background="#00000000"
            android:id="@+id/button2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:src="@drawable/b3"
            android:background="#00000000"
            android:id="@+id/button3" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:src="@drawable/b5"
            android:background="#00000000"
            android:id="@+id/button4" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:src="@drawable/b4"
            android:background="#00000000"
            android:id="@+id/button5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:src="@drawable/b6"
            android:background="#00000000"
            android:id="@+id/button6" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="00 : 00"
            android:textSize="40sp"
            android:id="@+id/textView_timer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_lamp_icon"
            android:id="@+id/imageView2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/imageView_main_icon1"
                android:src="@drawable/ic_circle_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:id="@+id/imageView_main_icon2"
                android:src="@drawable/ic_circle_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/imageView_main_icon3"
                android:src="@drawable/ic_circle_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/imageView_main_icon4"
                android:src="@drawable/ic_circle_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/imageView_main_icon5"
                android:src="@drawable/ic_circle_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/imageView_main_icon6"
                android:src="@drawable/ic_circle_icon"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
